<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="nachhilfe.yanni.todolist.View.TodosController">


    <TableView fx:id="mTodos">
        <columns>
            <TableColumn fx:id="mIsDone" text="Finished"/>
            <TableColumn fx:id="mDateUpsterted" text="Last edited"/>
            <TableColumn fx:id="mShortDescription" text="Short Description"/>
        </columns>
    </TableView>

    <Button onAction="#showAddView">Add</Button>
    <Button onAction="#showEditView">Edit</Button>
    <Button onAction="#deleteTodo">Delete</Button>
</VBox>
